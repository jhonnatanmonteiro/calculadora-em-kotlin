<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/jarnela_fundo"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:padding="30dp"
        android:background="@color/interface_fundo"
        android:orientation="vertical">
        <TextView
            android:id="@+id/entrada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="30sp"
            android:textColor="@color/white"
            tools:text="7x7" />
        <TextView
            android:id="@+id/saida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="55sp"
            android:textColor="@color/verde1"
            tools:text="7x7" />



    </LinearLayout>
    
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*" >
        <TableRow>

            <androidx.appcompat.widget.AppCompatButton

                android:id="@+id/botao_zerar"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/botao_style"
                android:text="C"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_parentese_esquerdo"
                android:layout_width="wrap_content"
                android:layout_height="90dp"

                style="@style/botao_style"
                android:text="("/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_parentese_direito"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/botao_style"
                android:text="%"/>
           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/btn_divisao"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            style="@style/botao_style"
            android:text="รท"/>


        </TableRow>
    </TableLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*" >
        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_n7"

                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/botao_style"

                android:text="7"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_n8"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/botao_style"
                android:text="8"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_n9"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/botao_style"
                android:text="9"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_multiplicao"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/botao_style"
                android:text="x"/>


        </TableRow>
    </TableLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*" >
        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_n4"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/botao_style"
                android:text="4"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_n5"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/botao_style"
                android:text="5"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_n6"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/botao_style"
                android:text="6"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_subtracao"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/botao_style"
                android:text="-"/>


        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*" >
        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_n1"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/botao_style"
                android:text="1"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_n2"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/botao_style"
                android:text="2"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_n3"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/botao_style"
                android:text="3"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_somar"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/botao_style"
                android:text="+"/>


        </TableRow>
    </TableLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*" >
        <TableRow>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_n0"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/botao_style"
                android:text="0"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_ponto"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/botao_style"
                android:text="."/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_resultado"
                style="@style/botao_style"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:text="=" />


        </TableRow>
    </TableLayout>
</LinearLayout>